@model SchoolManagement.MVC.Data.Student

@{
    ViewData["Title"] = "Crear Perfil de Estudiante";
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Students" asp-action="Index">Estudiantes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Nuevo Estudiante</li>
    </ol>
</nav>

<h2>Crear Perfil de Estudiante</h2>

<hr />
<div class="row">
    <center>
        <div class="col-md-4">
            <center>
                <div class="card" style="background-color: #f2f8fd">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="DateOfBirth" class="control-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Crear" class="btn text-light" style="background-color: #286ce6" />
                                <a class="btn text-light" style="background-color: #286ce6" asp-action="Index">Volver a la Lista</a>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </center>
        </div>
    </center>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
