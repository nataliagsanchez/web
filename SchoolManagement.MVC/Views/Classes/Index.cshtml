@model IEnumerable<SchoolManagement.MVC.Data.Class>

@{
    ViewData["Title"] = "Clases";
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Clases</li>
    </ol>
</nav>

<h1>Clases</h1>

<p>
    <a class="btn text-light" style="background-color: #286ce6" asp-action="Create">Nueva Clase</a>
</p>
<table class="table">
    <thead style="color: #286ce6">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @item.Course.Code - @item.Course.Name
            </td>
            <td>
                @item.Lecturer.FirstName @item.Lecturer.LastName
            </td>
            <td>
                <a class="btn text-light" style="background-color: #286ce6" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn text-light" style="background-color: #286ce6" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                <button data-id="@item.Id" class="btn text-light deleteBtn" style="background-color: #286ce6" type="button">Eliminar</button>
                    <a class="btn text-light" style="background-color: #286ce6" asp-action="ManageEnrollments" asp-route-id="@item.Id">Gestionar Matriculas</a>
            </td>
        </tr>
}
    </tbody>
</table>

<form asp-action="Delete" id="classDeleteForm">
    <input type="hidden" id="classid" name="id" />
</form>

@section Scripts {
    <script>
        $(function () {

            $('.table').DataTable();
        })
    </script>

    @if (User.Identity.IsAuthenticated)
    {
        <script>
            $(function () {
                $('.deleteBtn').click(function (e) {
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            )
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#classid').val(id);
                            $('#classDeleteForm').submit();
                        }
                    })
                })
            })
        </script>
    }
}