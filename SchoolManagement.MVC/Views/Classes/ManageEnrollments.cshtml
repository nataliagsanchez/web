@model SchoolManagement.MVC.Models.ClassEnrollmentViewModel

@{
    ViewData["Title"] = "Gestionar Matriculas";
}

<h2>Gestionar matriculas para la sesion de @Model.Class.Time de la asignatura @Model.Class.Course.Name</h2>
<h3>Profesor: @Model.Class.Lecturer.FirstName @Model.Class.Lecturer.LastName</h3>

<hr/>
<h4>Lista de estudiantes.</h4>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model.Students)
        {
        <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>
                    
                @if (student.IsEnrolled)
                {
                    <button data-student-id="@student.Id" data-shoulEnroll="false" class="btn text-light enrollmentBtn" style="background-color: #286ce6" type="button">Eliminar</button>
                }
                else
                {
                    <button data-student-id="@student.Id" data-shoulEnroll="true" class="btn text-light enrollmentBtn" style="background-color: #286ce6" type="button">Añadir</button>
                }

            </td>
        </tr>
        }
    </tbody>
</table>

<form asp-action="EnrollStudent" id="classEnrollmentForm">
    <input type="hidden" id="classid" name="classId" value="@Model.Class.Id" />
    <input type="hidden" id="studentid" name="studentId" />
    <input type="hidden" id="shouldEnroll" name="shouldEnroll" />
</form>

@section Scripts {
    <script>
        $(function() {
            $('.table').DataTable();
            $('.deleteBtn').click(function (e) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "Please, confirm this action",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Confirm Enrollment'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var btn = $(this);
                        var studentId = btn.attr("data-studentId");
                        var shouldEnroll = btn.attr("data-shouldEnroll")
                        $('#studentId').val(studentid);
                        $('#shouldEnroll').val(shouldEnroll);
                        $('#courseEnrollmentForm').submit();
                    }
                })
            })
        })
    </script>
}